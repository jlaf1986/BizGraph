@model FHNWPrototype.Application.Controllers.UIViewModels.Security.LoginSystemAccountView 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Welcome to BizGraph</title>

   @* <meta http-equiv="X-UA-Compatible" content="IE=8"/>*@
