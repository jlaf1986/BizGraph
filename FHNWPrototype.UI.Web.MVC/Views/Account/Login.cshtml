    <meta name="viewport" content="width=device-width" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/themes/designv1/html5base.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/themes/designv1/welcome.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/themes/designv1/_partial_footer.css")" />
    <!--[if lt IE 9]>  
    <script>    
        document.createElement("header");    
        document.createElement("footer");    
        document.createElement("section");     
        document.createElement("aside");    
